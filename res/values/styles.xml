<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="UserNameAndPasswordEditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/username_and_password_et_bg</item>
        <item name="android:layout_marginTop">@dimen/login_and_register_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/login_and_register_margin_top</item>
        <item name="android:layout_marginLeft">@dimen/login_and_register_margin_left</item>
        <item name="android:layout_marginRight">@dimen/login_and_register_margin_left</item>
        <item name="android:padding">@dimen/login_and_register_padding</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>
    
    <style name="LoginAndRegisterBtn">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/login_and_register_btn_bg</item>
        <item name="android:layout_marginTop">@dimen/login_and_register_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/login_and_register_margin_top</item>
        <item name="android:layout_marginLeft">@dimen/login_and_register_margin_left</item>
        <item name="android:layout_marginRight">@dimen/login_and_register_margin_left</item>
        <item name="android:padding">@dimen/login_and_register_padding</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="main_tab_bottom">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:button">@null</item>
    </style>
    
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>
    
    <style name="HeaderLoadingBar">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDrawable">@drawable/loading_bar</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">1000</item>
    </style>

</resources>
