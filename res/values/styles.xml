<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="UserNameAndPasswordEditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/username_and_password_et_bg</item>
        <item name="android:layout_marginTop">@dimen/login_and_register_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/login_and_register_margin_top</item>
        <item name="android:layout_marginLeft">@dimen/login_and_register_margin_left</item>
        <item name="android:layout_marginRight">@dimen/login_and_register_margin_left</item>
        <item name="android:padding">@dimen/login_and_register_padding</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>
    
    <style name="LoginAndRegisterBtn">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/login_and_register_btn_bg</item>
        <item name="android:layout_marginTop">@dimen/login_and_register_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/login_and_register_margin_top</item>
        <item name="android:layout_marginLeft">@dimen/login_and_register_margin_left</item>
        <item name="android:layout_marginRight">@dimen/login_and_register_margin_left</item>
        <item name="android:padding">@dimen/login_and_register_padding</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="main_tab_bottom">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">@drawable/main_tab_item_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:paddingTop">7dip</item>
        <item name="android:paddingBottom">7dip</item>
        <item name="android:button">@null</item>
    </style>

</resources>
